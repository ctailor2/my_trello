.container-fluid
  .row
    .col-lg-4.col-lg-offset-4
      -# TODO: Extract url base to envar
      = form_tag('http://localhost:3000/v1/login', method: :post, remote: true, id: 'login_form') do
        .form-group
          = label :user, :email
          = text_field :user, :email, class: 'form-control'
        .form-group
          = label :user, :password
          = password_field :user, :password, class: 'form-control'
        = submit_tag 'Submit', class: 'btn btn-primary'
      %p
        %em.small
          Not registered yet?
          = link_to 'Sign up', register_path, target: '_self'

:javascript
  $('#login_form').on('ajax:success', function(event, data, status, xhr) {
    Cookies.set('token', data['token'])
    window.location.replace("#{root_url}");
  }).on('ajax:error', function(event, xhr, status, error) {
    // TODO: Handle error
  });

